{
  "name": "hotpos",
  "version": "1.0.0",
  "description": "HotPos - Restaurant POS Desktop App",
  "author": "HotPos",
  "main": "app/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.hotpos.app",
    "productName": "HotPos",
    "asar": false,
    "files": [
      "**/*",
      "!src/**",
      "!public/**",
      "!release/**",
      "!output/**",
      "!build-output/**",
      "!.git/**",
      "!.gitignore",
      "!vite.config.js",
      "!*.md"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "xmlrpc": "^1.3.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}